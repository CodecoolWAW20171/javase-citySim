<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.QuadCurve?>
<?import javafx.scene.shape.Line?>

<Pane prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/10.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codecool.citySim.controller.CitySimPaneController"
      stylesheets="@/css/style.css" styleClass="scene">
<Pane layoutX="640" layoutY="360" fx:id="pane">

      <!--Crossroad-->
      <QuadCurve fx:id="rightRightTurn" startX="-16" endX="-8" startY="8" endY="16" controlX="-7" controlY="7"
                 styleClass="turn"/>
      <QuadCurve fx:id="rightLeftTurn" startX="-16" endX="8" startY="8" endY="-16" controlX="7" controlY="7"
                 styleClass="turn"/>
      <Line fx:id="rightStraight" startX="-16" endX="16" startY="8" endY="8"/>
 
      <QuadCurve fx:id="leftRightTurn" startX="16" endX="8" startY="-8" endY="-16" controlX="7" controlY="-7"
                 styleClass="turn"/>
      <QuadCurve fx:id="leftLeftTurn" startX="16" endX="-8" startY="-8" endY="16" controlX="-7" controlY="-7"
                 styleClass="turn"/>
      <Line fx:id="leftStraight" startX="16" endX="-16" startY="-8" endY="-8" />

      <QuadCurve fx:id="upRightTurn" controlX="7" controlY="7" endX="16" endY="8" startX="8" startY="16"
                 styleClass="turn"/>
      <QuadCurve fx:id="upLeftTurn" controlX="7" controlY="-7" endX="-16" endY="-8" startX="8" startY="16"
                 styleClass="turn"/>
      <Line fx:id="upStraight" startX="8" endX="8" startY="16" endY="-16" />

      <QuadCurve fx:id="downRightTurn" startX="-8" endX="-16" startY="-16" endY="-8" controlX="-7" controlY="-7"
                 styleClass="turn"/>
      <QuadCurve fx:id="downLeftTurn" startX="-8" endX="16" startY="-16" endY="8" controlX="-7" controlY="7"
                 styleClass="turn"/>
      <Line fx:id="downStraight" startX="-8" endX="-8" startY="-16" endY="16" />

</Pane>
</Pane>
